<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_tasks"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.user.loginapplication.UserProfile"
    tools:showIn="@layout/app_bar_user_profile">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:id="@+id/textView_user1"
        android:text=""
        android:layout_toEndOf="@+id/textView_username1"
        android:textSize="18sp"
        android:layout_toRightOf="@+id/textView_username1" />

    <TextView
        android:text="Username:   "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView_username1"
        android:textSize="18sp" />

    <TextView
        android:text="ID:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_userID"
        android:layout_below="@+id/textView_username1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView_userID"
        android:layout_toLeftOf="@+id/textView_user1"
        android:layout_toStartOf="@+id/textView_user1"
        android:id="@+id/textView_userID1"
        android:textSize="18sp" />

    <Button
        android:text="History"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_history"
        android:background="@color/colorAccent"
        android:fontFamily="sans-serif"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/textView_userID1"
        android:layout_toRightOf="@+id/textView_userID"
        android:layout_toEndOf="@+id/textView_userID"
        android:layout_marginLeft="17dp"
        android:layout_marginStart="17dp" />

</RelativeLayout>
